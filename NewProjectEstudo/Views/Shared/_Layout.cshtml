<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoPastelNew</title>
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav id="sidebar">
        <div id="sidebar_content">
            <div id="user">
                <img  id="user_avatar" src="~/css/imgteste.jpeg" />
                <p id="user_infos">
                    <span class="item-description">
                        Douglas Reis
                    </span>
                    <span class="item-description">
                        Admin
                    </span>
                </p>
            </div>

            <ul id="side_items">
                <li class="side-item active">
                    <a href="#" class="link-inicio">
                        <i class="bi bi-house-fill"></i>
                        <span class="item-description">
                            Inicio
                        </span>
                    </a>
                </li>

                <li class="side-item">
                    <a href="#" class="link-funcionarios">
                        <i class="bi bi-people-fill"></i>
                        <span class="item-description">
                            Funcionarios
                        </span>
                    </a>
                </li>

                <li class="side-item">
                    <a href="#" class="link-tarefas">
                        <i class="bi bi-clipboard2-fill"></i>
                        <span class="item-description">
                            Tarefas
                        </span>
                    </a>
                </li>

                <li class="side-item">
                    <a href="#" class="link-imagens">
                        <i class="fa-solid fa-image"></i>
                        <span class="item-description">
                            Imagens
                        </span>
                    </a>
                </li>

                <li class="side-item">
                    <a href="#" class="link-configuracao">
                        <i class="fa-solid fa-gear"></i>
                        <span class="item-description">
                            Configurações
                        </span>
                    </a>
                </li>
            </ul>

            <button id="open_btn">
                <i id="open_btn_icon" class="fa-solid fa-chevron-right"></i>
            </button>
        </div>

        <div id="logout">
            <button id="logout_btn">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="item-description">
                    Logout
                </span>
            </button>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


